- if controller_name != 'sessions'
  = link_to 'Logga in', new_session_path(resource_name), class: 'button'
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to 'Registrera', new_registration_path(resource_name), class: 'button'
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to 'Glömt lösenord?', new_password_path(resource_name), class: 'button'
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to 'Inte fått verifieringsmail?', new_confirmation_path(resource_name), class: 'button'
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to 'Inte fått upplåsningsinstruktioner?', new_unlock_path(resource_name), class: 'button'
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Logga in med #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'button'
    %br/
